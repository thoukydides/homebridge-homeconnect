    "main": "dist/index.js",
    "engines": {
        "node": "^24.13.0 || ^22.22.0 || ^20.20.0",
        "homebridge": "^1.11.2 || ^2.0.0-beta.0"
    },
    "dependencies": {
        "@homebridge/plugin-ui-utils": "^2.2.0",
        "chalk": "^4.1.2",
